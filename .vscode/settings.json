{
  "search.exclude": {
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  // Show eslint warnings and errors in typescript files
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Prefer `markdownlint`
  "prettier.disableLanguages": ["markdown"],
  // Run `eslint --fix` after Prettier, follows `npm run format` flow
  "prettier.eslintIntegration": true
}
